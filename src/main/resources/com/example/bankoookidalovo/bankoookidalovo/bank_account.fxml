<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" vgap="8" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankoookidalovo.bankoookidalovo.BankAccountController">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>

  <Label text="ID:" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
  <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Годовая процентная ставка (%):" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="4" />
  <TextField fx:id="interestField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />

  <Label prefHeight="17.0" prefWidth="43.0" text="Сумма:" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="3" />

  <Button alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#handleDeposit" prefHeight="25.0" prefWidth="90.0" text="Депозит" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
  <Button contentDisplay="CENTER" onAction="#handleWithdraw" prefHeight="25.0" prefWidth="115.0" text="Вывод" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
  <Button onAction="#handleCalculateInterest" prefHeight="25.0" prefWidth="343.0" text="Рассчитать ежемесячные проценты" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />

  <Label fx:id="resultLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="115.0" text="Вывести баланс" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
   <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="90.0" text="Внести" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="90.0" text="Снять" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <TextField fx:id="sum" alignment="TOP_RIGHT" maxWidth="133.0" minWidth="50.0" prefHeight="25.0" prefWidth="133.0" visible="false" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
   <columnConstraints>
      <ColumnConstraints halignment="LEFT" />
      <ColumnConstraints halignment="CENTER" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
